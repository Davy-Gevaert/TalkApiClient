@using (Html.BeginForm("MessagesByChannel", "Chat", FormMethod.Get))
{
        <select name="channel">

            

            @foreach (var row in @Model.MyChannels)
            {
                <option value="@row.Name">@row.Name</option> 
            }

        </select>
        <input type="submit" value="submit" />
}

<table class="table table-striped">
    <thead>
        <tr>
            <th>Id</th>
            <th>Author</th>
            <th>Message</th>
            <th>Channel</th>
            <th>CreatedAt</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.GetMessagesFromSelectedChannel != null)
        {
            @foreach (var response in Model.GetMessagesFromSelectedChannel)
            {

                <partial name="RowPartialChatMessage" model="response" />

            }
        }

    </tbody>
</table>