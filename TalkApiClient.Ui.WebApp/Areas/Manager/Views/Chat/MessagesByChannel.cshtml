@model TalkApiClient.Ui.WebApp.Areas.Manager.Models.ChatViewModel
@{
    ViewData["Title"] = "Lijst API Chat-Messages";
}

<h1>@ViewData["Title"]</h1>

@if (User.IsInRole("Administrator"))
{
    <a class="btn btn-primary" asp-action="CreateChatMessage">New POST</a>
}

