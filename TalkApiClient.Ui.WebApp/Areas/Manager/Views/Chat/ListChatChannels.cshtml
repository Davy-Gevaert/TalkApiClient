@model IList<TalkApiClient.Model.ChatChannelResponse>
@{
    ViewData["Title"] = "GET /api/chat-channels";
}

<h1>@ViewData["Title"]</h1>

    @if (User.IsInRole("Administrator"))
    {
        <a class="btn btn-primary" asp-action="CreateChatChannel">Aanmaken chat-kanaal</a>
    }

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>CreatedAt</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var response in Model)
            {
                <partial name="RowPartialChatChannel" model="response" />
            }
        </tbody>
    </table>

    <p>@Html.ActionLink("Terug naar index", "Index")</p>